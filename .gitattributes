################################################################################
# 0) БАЗА: авто-нормализация текста
################################################################################
* text=auto

################################################################################
# 1) UNITY YAML / ТЕКСТ — дифф/мердж через UnityYAMLMerge
#    (нужны настройки: 
#     git config merge.unityyamlmerge.name "Unity YAML Merge"
#     git config merge.unityyamlmerge.driver 'unityyamlmerge merge -p %O %A %B %L %P')
################################################################################
# Отмечаем сцены/префабы как lockable — удобнее пользоваться LFS-lock (даже без LFS)
*.unity                text eol=lf merge=unityyamlmerge diff lockable
*.prefab               text eol=lf merge=unityyamlmerge diff lockable
*.mat                  text eol=lf merge=unityyamlmerge diff
*.anim                 text eol=lf merge=unityyamlmerge diff
*.controller           text eol=lf merge=unityyamlmerge diff
*.overrideController   text eol=lf merge=unityyamlmerge diff
*.meta                 text eol=lf merge=unityyamlmerge diff
*.asset                text eol=lf merge=unityyamlmerge diff
*.spriteatlas          text eol=lf merge=unityyamlmerge diff
*.terrainlayer         text eol=lf merge=unityyamlmerge diff

################################################################################
# Явно держим как YAML (НЕ LFS)
Assets/**/TerrainData.asset    text diff merge=unityyamlmerge eol=lf -filter
Assets/**/NoiseTex3D.asset     text diff merge=unityyamlmerge eol=lf -filter

################################################################################
# 2) КОД / КОНФИГИ — текст LF
################################################################################
*.asmdef               text eol=lf diff
*.asmref               text eol=lf diff
*.inputactions         text eol=lf diff
*.cginc                text eol=lf diff
*.compute              text eol=lf diff
*.shadergraph          text eol=lf diff
*.shadersubgraph       text eol=lf diff
*.cs        text eol=lf diff
*.shader    text eol=lf diff
*.hlsl      text eol=lf diff
*.json      text eol=lf diff
*.xml       text eol=lf diff
*.yaml      text eol=lf diff
*.yml       text eol=lf diff
*.uxml      text eol=lf diff
*.uss       text eol=lf diff
*.gradle    text eol=lf diff
*.md        text eol=lf diff
*.txt       text eol=lf diff
*.sln       text eol=lf diff
*.csproj    text eol=lf diff
*.csv       text eol=lf diff
*.tsv       text eol=lf diff
*.ini       text eol=lf diff
*.props     text eol=lf diff


################################################################################
# 3) GIT LFS — ТЕКСТУРЫ/ИЗОБРАЖЕНИЯ
################################################################################
*.png  filter=lfs diff=lfs merge=lfs -text
*.jpg  filter=lfs diff=lfs merge=lfs -text
*.jpeg filter=lfs diff=lfs merge=lfs -text
*.tga  filter=lfs diff=lfs merge=lfs -text
*.tif  filter=lfs diff=lfs merge=lfs -text
*.tiff filter=lfs diff=lfs merge=lfs -text
*.psd  filter=lfs diff=lfs merge=lfs -text
*.psb  filter=lfs diff=lfs merge=lfs -text
*.exr  filter=lfs diff=lfs merge=lfs -text
*.hdr  filter=lfs diff=lfs merge=lfs -text
*.dds  filter=lfs diff=lfs merge=lfs -text
*.ktx  filter=lfs diff=lfs merge=lfs -text
*.ktx2 filter=lfs diff=lfs merge=lfs -text
*.gif  filter=lfs diff=lfs merge=lfs -text
*.webp filter=lfs diff=lfs merge=lfs -text

################################################################################
# 4) GIT LFS — 3D/АНИМАЦИИ/АУДИО
################################################################################
*.fbx   filter=lfs diff=lfs merge=lfs -text lockable
*.obj   filter=lfs diff=lfs merge=lfs -text
*.blend filter=lfs diff=lfs merge=lfs -text
*.max   filter=lfs diff=lfs merge=lfs -text

*.wav   filter=lfs diff=lfs merge=lfs -text
*.aif   filter=lfs diff=lfs merge=lfs -text
*.ogg   filter=lfs diff=lfs merge=lfs -text
*.mp3   filter=lfs diff=lfs merge=lfs -text

################################################################################
# 5) GIT LFS — ВИДЕО
################################################################################
*.mp4   filter=lfs diff=lfs merge=lfs -text
*.mov   filter=lfs diff=lfs merge=lfs -text
*.avi   filter=lfs diff=lfs merge=lfs -text
*.mkv   filter=lfs diff=lfs merge=lfs -text
*.ogv   filter=lfs diff=lfs merge=lfs -text

################################################################################
# 6) GIT LFS — АРХИВЫ/ПАКЕТЫ/ШРИФТЫ
################################################################################
*.unitypackage filter=lfs diff=lfs merge=lfs -text
*.zip          filter=lfs diff=lfs merge=lfs -text
*.7z           filter=lfs diff=lfs merge=lfs -text
*.rar          filter=lfs diff=lfs merge=lfs -text

*.ttf  filter=lfs diff=lfs merge=lfs -text
*.otf  filter=lfs diff=lfs merge=lfs -text

